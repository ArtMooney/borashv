{
  "name": "borashv",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "USE_LOCAL_DB=true drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "USE_LOCAL_DB=true drizzle-kit studio",
    "db:export": "wrangler d1 export borashv --remote --output=borashv-backup.sql",
    "db:export:local": "wrangler d1 export borashv --local --output=borashv-backup.sql",
    "db:extract": "npm run db:export && grep '^INSERT' borashv-backup.sql > borashv-backup-inserts.sql || true",
    "db:extract:local": "npm run db:export:local && grep '^INSERT' borashv-backup.sql > borashv-backup-inserts.sql || true",
    "db:import": "wrangler d1 execute borashv --remote --file=borashv-backup-inserts.sql",
    "db:import:local": "wrangler d1 execute borashv --local --file=borashv-backup-inserts.sql",
    "db:push": "npm run db:extract:local && npm run db:import",
    "db:pull": "npm run db:extract && npm run db:import:local"
  },
  "dependencies": {
    "@nuxt/image": "^1.11.0",
    "@nuxtjs/robots": "^5.3.0",
    "@nuxtjs/sitemap": "^7.4.3",
    "@pinia/nuxt": "^0.11.3",
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/vite": "^4.1.11",
    "@vuepic/vue-datepicker": "^12.0.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "tailwindcss": "^4.1.18",
    "v-calendar": "^3.1.2",
    "vue": "latest",
    "vue-draggable-next": "^2.3.0",
    "vue-router": "latest",
    "vue3-lottie": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251109.0",
    "@iconify/json": "^2.2.382",
    "@types/node": "^24.5.2",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "unplugin-icons": "^22.2.0",
    "wrangler": "^4.46.0"
  }
}
